<!-- home.wxml -->
<view class="news-list">
  <text>我的收藏({{num}})</text> 
  <!-- 使用 wx:for 循环遍历新闻列表 -->
  <block wx:for="{{newsList}}" wx:key="index">
    <!-- 每个新闻项 -->
    <view class="news-item" bind:tap="navigateToIndex" data-index="{{index}}">
      <view class="list-item">
        <!-- 新闻图片 -->
        <image class="list-item-image" src="{{item.picPath}}"></image>
        <!-- 新闻标题 -->
        <view class="list-item-text">{{item.title}}</view>
      </view>
    </view>
    <!-- 添加分割线 -->
    <view class="news-divider"></view>
  </block>
</view>
