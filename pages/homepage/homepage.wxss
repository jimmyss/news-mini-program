/* home.wxss */
.navbar-container {
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding: 0 10rpx;
  background-color: #fefefe;
  z-index: 1001;
  box-shadow: 0 0.5px 0 0 #ececec;
}

.navbar {
  height: 100%;
  flex-grow: 1;
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  display: block;
}

.navbar-item {
  position: relative;
  width: 120rpx;
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  font-size: 32rpx;
  cursor: pointer;
  box-sizing: border-box;
  color: #232323;
  /* border-bottom: 2rpx solid rgba(0, 0, 0, 0.2); */
  text-align: center;
}

.navbar-item-active {
  background-color: #6682f0; /* 淡蓝色 */
	color: #fcf4f4;
	border-radius: 10px;
  z-index: 1001;
	font-size: 34rpx;
	height:60rpx;
	line-height: 60rpx;
}

.expand-icon {
  position:relative;
  width: 50rpx; /* 调整为适当的大小 */
  height: 50rpx; /* 调整为适当的大小 */
  margin-right: 10px; /* 右边距，为了有一些空间在图标和屏幕边缘之间 */
}
.my-icon{
  font-family: 'pulldown';
  position:relative;
  width: 50rpx; /* 调整为适当的大小 */
  height: 50rpx; /* 调整为适当的大小 */
  margin-right: 10px; /* 右边距，为了有一些空间在图标和屏幕边缘之间 */
}

.nav-blank {
  height: 80rpx;
}
.drawer-screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  

.all-columns-grid {
	position: fixed;
  display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
  top: 80rpx;  /* 根据你的导航栏的高度来调整 */
  left: 0;
	right: 0;
	height:20vh;
	z-index: 1001;
	background: #e6e5e5;
	padding:10rpx 20rpx;
  /* 其他的样式设置... */
}

.column-item {
	width: 20%; 
	display: flex;
	justify-content: center;  
  align-items: center;
	text-align: center;
	margin:10rpx 0;
	border: 1rpx solid #ddd;  /* 添加边框 */
  border-radius: 20rpx;  /* 设置圆角 */
  background-color: #f5f5f5;  /* 添加背景颜色 */
  /* 其他的样式设置... */
}

.column-item-active{
	width: 20%; 
	display: flex;
	justify-content: center;  
  align-items: center;
	text-align: center;
	margin:10rpx 0;
	border: 1rpx solid #ddd;  /* 添加边框 */
	border-radius: 20rpx;  /* 设置圆角 */
	color: #fcf4f4;
  background-color: #6682f0;  /* 添加背景颜色 */
}

.swiper-blank{
	height:20rpx;
}
/* 设置 swiper 和 swiper-item 的大小 */
swiper, swiper-item {
  width: 100%;
  height: 200px;  /* 这里你可以自己调整，例如设置成你希望的高度 */
}

/* 设置图片的大小，让图片充满整个 swiper-item */
.slide-image {
  width: 100%;
  height: 100%;
}

.news-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.news-item-left {
  margin-right: 10px;
}

.news-image {
  width: 300rpx;
  height: 240rpx;
}

.news-item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  display: flex;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 40px;
}

.news-details {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.news-author,
.news-time {
  font-size: 12px;
  color: #999;
  margin-right: 10px;
}

.news-divider {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 10px;
  margin-bottom: 10px;
}