/* home.wxss */
.news-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.news-item-left {
  margin-right: 10px;
}

.news-image {
  width: 300rpx;
  height: 240rpx;
}

.news-item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  display: flex;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 40px;
}

.news-details {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.news-author,
.news-time {
  font-size: 12px;
  color: #999;
}

.news-divider {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 10px;
  margin-bottom: 10px;
}