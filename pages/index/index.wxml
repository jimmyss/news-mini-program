<view class="container">
  <view class="header">
    <text class="title">{{title}}</text>
    <text class="date"> {{author}} {{date}}</text>
  </view>
  <image class="picImage" src="{{imagePath}}"></image>
  <view wx:for="{{content}}" class="content">
    <text>{{item}}</text>
  </view>
</view>

<view class="bottom-bar">
  <view class="bottom-icon" bindtap="toggleCollect">
  <image class="image" src="{{ isCollected ? '/pages/index/images/收藏实心.png' : '/pages/index/images/收藏空心.png' }}" mode="widthFix"></image>
</view>
<view class="bottom-icon" bindtap="toggleShare">
  <image class="image" src="{{ isShared ? '/pages/index/images/分享实心.png' : '/pages/index/images/分享空心.png' }}" mode="widthFix"></image>
</view>
<view class="bottom-icon center-icon" bindtap="toggleComment">
  <image class="image" src="/pages/index/images/评论.png" mode="widthFix"></image>
</view>
</view>
