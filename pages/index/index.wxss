/* index.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100%;
}

.header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;

}

.title {
  font-size: 20px;
  margin-left: 10px;
  display: block;
  font-weight: 500;
}

.date {
  font-size: 15px;
  margin-left: 10px;
  display: block;
  font-weight: 200;
}

.image {
  margin-top: 10px;
  width: 30%;
}
.picImage{
  margin-top: 25px;
  width: 90%;
}
.content {
  margin-top: 10px;
  padding: 10px;
  word-wrap: break-word;
  font-size: 17px;
  color: #333;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
}

.bottom-icon {
  flex: 1;
  text-align: center;
  font-size: 16px;
}

.center-icon {
  font-size: 24px;
}
