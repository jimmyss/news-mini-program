/* index.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100%;
}

.header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 20px;
  margin-left: 10px;
}

.date {
  font-size: 16px;
  margin-right: 10px;
}

.image {
  margin-top: 10px;
  width: 30%;
}

.content {
  margin-top: 20px;
  padding: 10px;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f0f0f0;
}

.bottom-icon {
  flex: 1;
  text-align: center;
  font-size: 16px;
}

.center-icon {
  font-size: 24px;
}
